<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".RegisterActivity">
    <EditText
        android:id="@+id/register_username"
        android:hint="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_above="@+id/register_email"
        android:layout_alignRight="@+id/register_email"
        android:layout_alignEnd="@+id/register_email"
        android:layout_alignLeft="@+id/register_email"
        android:layout_alignStart="@+id/register_email" />
    <EditText
        android:id="@+id/register_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_above="@+id/register_password"
        android:layout_alignRight="@+id/register_password"
        android:layout_alignEnd="@+id/register_password"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password" />
    <EditText
        android:id="@+id/register_password"
        android:hint="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_above="@+id/register_passwordConfirm"
        android:layout_alignRight="@+id/register_passwordConfirm"
        android:layout_alignEnd="@+id/register_passwordConfirm"
        android:layout_alignLeft="@+id/register_passwordConfirm"
        android:layout_alignStart="@+id/register_passwordConfirm" />
    />
    <EditText
        android:id="@+id/register_passwordConfirm"
        android:hint="Password Confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_above="@+id/register_button"
        android:layout_alignRight="@+id/register_button"
        android:layout_alignEnd="@+id/register_button"
        android:layout_alignLeft="@+id/register_button"
        android:layout_alignStart="@+id/register_button" />
    />
    <Button
        android:id="@+id/register_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/register_button"
        android:onClick="onClickRegister"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>